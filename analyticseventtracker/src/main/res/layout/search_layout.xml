<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="10dp"
    android:background="@color/primaryColor"
    tools:context="com.ng.analyticstracker.AnalyticsEventsListActivity">

    <EditText
        android:id="@+id/searchText"
        style="@style/AndroidTextDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundSearch"
        android:ellipsize="end"
        android:hint="Search Events"
        android:imeActionLabel="Search"
        android:layout_toLeftOf="@+id/deleteAll"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingTop="16dp"
        android:paddingEnd="10dp"
        android:paddingBottom="16dp"
        android:singleLine="true"
        android:textColorHint="@color/searchHint" />

    <ImageView
        android:id="@+id/deleteAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/event_debug_ic_delete"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>